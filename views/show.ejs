<%- include("partials/header")%>
<div class="ui main container segment text">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img src="<%= blog.image %>" class="ui centered rounded image">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- blog.body %></p>
            </div>
        </div>
    </div>
    <form action="/blogs/<%= blog._id %>/edit" method="get" class="ui form">
        <button class="ui basic blue button">EDIT</button>
    </form>
    <form action="/blogs/<%= blog._id %>?_method=DELETE" method="post" class="ui form">
        <button class="ui basic red button">DELETE</button>
    </form>
</div>



<%- include("partials/footer")%>