<%- include("partials/header")%>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title%></div>
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="post" class="ui form">
        <!--create a blog object that have title, image and body-->
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="title" value="<%= blog.title%>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="image" value="<%= blog.image%>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" required><%= blog.body%></textarea>
        </div>
        <input type="submit" class="ui inverted big primary button">
    </form>
</div>

<%- include("partials/footer")%>